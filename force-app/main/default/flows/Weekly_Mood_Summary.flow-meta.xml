    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Get_Weekly_Mood_Summary</targetReference>
        </connector>
        <schedule>
            <frequency>Weekly</frequency>
            <startDate>2025-11-17</startDate>
            <startTime>20:00:00.000Z</startTime>
        </schedule>
        <triggerType>Scheduled</triggerType>
    </start>
    <status>Active</status>
    <decisions>
        <name>Check_If_Has_Mood_Data</name>
        <label>Check If Has Mood Data</label>
        <locationX>176</locationX>
        <locationY>242</locationY>
        <defaultConnector>
            <targetReference>Send_No_Data_Email</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No Mood Data</defaultConnectorLabel>
        <rules>
            <name>Has_Mood_Entries</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>MoodSummary.totalMoodEntries</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <numberValue>0.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Send_Mood_Summary_Email</targetReference>
            </connector>
            <label>Has Mood Entries</label>
        </rules>
    </decisions>
    <actionCalls>
