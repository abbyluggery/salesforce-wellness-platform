        <flowTransactionModel>CurrentTransaction</flowTransactionModel>
        <nameSegment>MoodInsightsInvocable</nameSegment>
        <outputParameters>
            <assignToReference>MoodSummary</assignToReference>
            <name>output</name>
        </outputParameters>
        <versionSegment>1</versionSegment>
    </actionCalls>
    <actionCalls>
